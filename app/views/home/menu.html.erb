<h2>Menu</h2>
<% Section.all.each do |section| %>
<div class="btn-group" role="group" aria-label="Basic example">
  <%= link_to section, menu_path(section: section), class: 'btn btn-secondary' %>
</div>
<%end%>


<%  @fooditems.each do |food_item| %>
   <div class="card">
    <div class="card_holder"><%= food_item.name %></li>
    </div>
   </div>
  <div class="card">
    <div class="card_holder"><%= image_tag food_item.image_url %></li>
    </div>
  </div>  
<%end%>